<div>

  <section class='mt-5'>
    <div class='display-5 text-center'>{{newsBlock.title}}

    </div>

    <div class='row g-2 mt-2'>
      {{#each newsBlock.cards}}
        <div class='col-3'>
       {{> shoppost card=this}}
        </div>
      {{/each}}
    </div>

  </section>

  <hr class='my-5' />

  <section class='row'>
    <nav class='col-12 nav nav-tabs mb-3'>
      {{#each goodsBlock.tabs}}

        <a href='#' class='nav-link 
        {{#if isActive}}active{{/if}}
        {{#if isDisabled}}
        text-succesery
        disabled
        {{/if}}
        '>{{text}}</a>

      {{/each}}
    </nav>

    {{#each goodsBlock.cards}}
      <div class='col-4 g-4'>
        {{> shopcard card =this}}
      </div>
    {{/each}}
  </section>

  <hr class='my-5' />

  
    {{> shopsubscribe}}


  <hr class='my-5' />
  
  {{> shopaction service = service}}
  <hr class='my-5' />
</div>